<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.financialplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.financialplanner.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.financialplanner.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >

            <!-- android:parentActivityName="com.example.financialplanner.MainActivity" -->
        </activity>
        <activity
            android:name="com.example.financialplanner.AccountActivity"
            android:label="@string/title_activity_account" >

            <!-- android:parentActivityName="com.example.financialplanner.LoginActivity" -->
        </activity>
        <activity
            android:name="com.example.financialplanner.RegistryActivity"
            android:label="@string/title_activity_registry" >

            <!-- android:parentActivityName="com.example.financialplanner.MainActivity" -->
        </activity>
        <activity
            android:name="com.example.financialplanner.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.example.financialplanner.ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
    </application>

</manifest>
